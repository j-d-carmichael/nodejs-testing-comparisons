{
  "name": "nodetest",
  "version": "1.0.0",
  "scripts": {
    "test:node": "./run-timer.sh 'tsx --test $(find src -type f -name '*.nodetest.ts')' 'node:test'",
    "test:jest": "./run-timer.sh 'jest' 'jest'",
    "test:mocha": "./run-timer.sh 'mocha --require ts-node/register src/**/*.mocha.ts --recursive' 'mocha & chai'",
    "test:vitest": "./run-timer.sh 'vitest run' 'vitest'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/sinon": "^17.0.2",
    "chai-as-promised": "^7.1.1",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
